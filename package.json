{
    "name": "zus.js",
    "version": "1.0.0",
    "description": "generator raport√≥w ZUS DRA/RCA",
    "main": "index.js",
    "author": "Marcin Zdun <mzdun@midnightbits.com>",
    "license": "MIT",
    "scripts": {
        "start": "webpack --watch --config webpack.dev.cjs",
        "build": "webpack --config webpack.prod.cjs",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,html}\" --quiet --fix",
        "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx,html}\" --fix ",
        "prettier": "pretty-quick --staged && eslint \"src/**/*.{js,jsx,ts,tsx,html}\" --fix"
    },
    "dependencies": {
        "@babel/runtime": "^7.26.0",
        "@material/web": "^2.2.0",
        "lit": "^3.2.1",
        "normalize.css": "^8.0.1",
        "uuid": "^11.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/plugin-proposal-decorators": "^7.25.9",
        "@babel/plugin-transform-runtime": "^7.25.9",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@types/chrome": "^0.0.289",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.10.5",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.19.0",
        "@typescript-eslint/parser": "^8.19.0",
        "babel-loader": "^9.2.1",
        "c8": "^10.1.3",
        "copy-webpack-plugin": "^12.0.2",
        "create-file-webpack": "^1.0.2",
        "css-loader": "^7.1.2",
        "dotenv-webpack": "^8.1.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-webpack-plugin": "^4.2.0",
        "expect.js": "^0.3.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "lit-css-loader": "^3.0.0",
        "mini-css-extract-plugin": "^2.9.2",
        "mocha": "^11.0.1",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "pretty-quick": "^4.0.0",
        "sass": "^1.83.1",
        "sass-loader": "^16.0.4",
        "sinon-chrome": "^3.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1",
        "webpack-merge": "^6.0.1"
    },
    "extension": {
        "background": {
            "service_worker": "extension/service-worker.js"
        },
        "content_scripts": [
            {
                "matches": [
                    "https://www.zus.pl/portal/*"
                ],
                "js": [
                    "extension/content-script.js"
                ],
                "all_frames": true
            }
        ],
        "permissions": [
            "sidePanel",
            "storage",
            "scripting",
            "tabs",
            "notifications"
        ],
        "host_permissions": [
            "https://www.zus.pl/portal/*"
        ],
        "side_panel": {
            "default_path": "extension/panel.html"
        },
        "options_ui": {
            "page": "extension/options.html",
            "open_in_tab": true
        },
        "action": {
            "default_title": "ZUS DRA/RCA",
            "default_icon": {
                "16": "/icons/16x.png",
                "32": "/icons/32x.png",
                "48": "/icons/48x.png",
                "128": "/icons/128x.png"
            }
        },
        "icons": {
            "16": "/icons/16x.png",
            "32": "/icons/32x.png",
            "48": "/icons/48x.png",
            "128": "/icons/128x.png"
        }
    }
}
